{
  "name": "admin",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "echo \"no tests\"",
    "proxy:gen": "npx abp generate-proxy -t ng -u https://localhost:44396 -o ./src/app/proxy --api-name Default",
